@model Latihan6.Models.Dokter

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Dokter</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.KodeDokter)

    <div class="form-group">
        <div class="control-label col-md-2">Nama Dokter</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NamaDokter, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NamaDokter, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Jenis Kelamin</div>
            <div class="col-md-10">
                LAKI-LAKI
                @Html.RadioButtonFor(model => model.JKelamin, "LAKI-LAKI")
                PEREMPUAN
                @Html.RadioButtonFor(model => model.JKelamin, "PEREMPUAN")
            </div>
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
